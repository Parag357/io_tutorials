<launch>
  <arg name="load_common_param" default="true"/>

  <arg name="model" default="$(optenv TURTLEBOT3_MODEL burger)"/> <!--mandatory argument-->
  <arg name="x_pos" default="-0.5"/>
  <arg name="y_pos" default="-0.5"/>
  <arg name="yaw_pos" default="0.0"/>
  <arg name="slam_methods" default="gmapping"/>
  <arg name="map_file" default="$(find turtlebot3_navigation)/maps/map.yaml"/>
  
  <!-- load common param -->
  <include if="$(arg load_common_param)" file="$(find io_gazebo_turtlebot_bringup)/launch/common.launch">
    <arg name="model" value="$(arg model)"/>
  </include>

  <!-- navigation -->
<!--   <include file="$(find turtlebot3_slam)/launch/turtlebot3_slam.launch">
  	<arg name="slam_methods" value="$(arg slam_methods)"/>
  </include>> -->
  <include file="$(find turtlebot3_navigation)/launch/turtlebot3_navigation.launch">
  	<arg name="map_file" value="$(arg map_file)"/>
  </include>>

  <!-- app -->
  <include file="$(find io_gazebo_turtlebot_demo_app)/launch/demo_app.launch">
    <arg name="model" value="$(arg model)"/>
	  <arg name="x_pos" value="$(arg x_pos)"/>
    <arg name="y_pos" value="$(arg y_pos)"/>
    <arg name="yaw_pos" value="$(arg yaw_pos)"/>
  </include>

</launch>
